       else
         printf("la opercacion es diferente a 8 o 2:%d\n",A, B);
	}
	{
		if((A > 3 && B > 3 && C < 3  ))
	     printf("la variable A y B es mayor que 3 pero C es menor que 3:%d\n",A,B,C);
       else
         printf("la variable A y B es menor que 3 pero C es mayor que 3:%d\n",A, B,C);
	}}
